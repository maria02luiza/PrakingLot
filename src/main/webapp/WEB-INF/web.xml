<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Protejează paginile Cars -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Cars</web-resource-name>
            <url-pattern>/Cars</url-pattern>
            <url-pattern>/AddCar</url-pattern>
            <url-pattern>/EditCar</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>READ_CARS</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Protejează paginile Users -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Users</web-resource-name>
            <url-pattern>/Users</url-pattern>
            <url-pattern>/AddUser</url-pattern>
            <url-pattern>/EditUser</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>READ_USERS</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Declară toate rolurile -->
    <security-role>
        <role-name>READ_CARS</role-name>
    </security-role>
    <security-role>
        <role-name>WRITE_CARS</role-name>
    </security-role>
    <security-role>
        <role-name>READ_USERS</role-name>
    </security-role>
    <security-role>
        <role-name>WRITE_USERS</role-name>
    </security-role>

    <!-- Login configuration -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealmParkingLot</realm-name>
        <form-login-config>
            <form-login-page>/Login</form-login-page>
            <form-error-page>/Login?error=true</form-error-page>
        </form-login-config>
    </login-config>
</web-app>